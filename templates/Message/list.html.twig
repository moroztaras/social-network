{% extends "Layout/layout-default.html.twig" %}
{% block title %}{{ 'messages'|trans }} {{ user.fullname }}{% endblock %}
{% block main %}
    <div class="uk-container uk-container-small">
        <div uk-grid>
            <div class="uk-width-1-2@s uk-width-1-3@m">
                <div class="uk-section uk-section-xsmall uk-background uk-background-default">
                    <ul class="uk-list uk-padding uk-padding-small">
                        {{ render(controller('App\\Controller\\BlockController::dialoguesList')) }}
                    </ul>
                </div>
            </div>
            <div class="uk-width-1-2@s uk-width-2-3@m">
                <div class="uk-padding uk-padding-small uk-background uk-background-default">
                    <nav class="uk-navbar-container">
                        <ul class="uk-navbar-nav">
                            <li class="{% if app.request.attributes.get('_route') == 'user_canonical' %}uk-active{% endif %}">
                                <a href="{{ path('user_messages_list') }}">{{ 'messages'|trans }}</a>
                            </li>
                            <li class="{% if app.request.attributes.get('_route') == 'user_canonical' %}uk-active{% endif %}">
                                <a href="#"><span uk-icon="icon: trash" class="uk-margin-small-right"></span></a>
                            </li>
                        </ul>
                    </nav>
                    <h3 class="uk-heading-line uk-margin-small-top"><span>{% block profile_title %}{{ 'messages'|trans }}{% endblock %}</span></h3>
                    {% block profile_content %}
                        {{ include('Message/ModeView/form.html.twig',{'form_message':form_message}) }}
                        {{ include('Message/ModeView/full.html.twig',{'user':user, 'receiver':receiver, 'id_dialogue':dialogue}) }}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
