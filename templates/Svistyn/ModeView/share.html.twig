<div class="uk-card uk-card-default uk-card-small uk-margin-small">
  <div class="uk-card-header">
    <div class="uk-grid-small uk-flex-middle" uk-grid>
      <div class="uk-width-auto">
        <img data-src="{{ svistyn.parent.user.avatar|avatarStyleDefault }}" width="40" height="40" alt uk-img>
      </div>
      <div class="uk-width-expand">
        <div><a class="uk-text-small uk-text-muted" href="{{ path('user_canonical', { 'id' : svistyn.parent.user.id }) }}">{{ svistyn.parent.user.fullname }}</a></div>
        <p class="uk-text-meta uk-margin-remove-top"><time datetime="{{ svistyn.parent.created|date('Y-m-d H:i:s') }}">{{ svistyn.parent.created|date('M d, Y') }}</time></p>
      </div>
    </div>
  </div>
  <div class="uk-card uk-card-body">
      {% if svistyn.parent.text is not null %}
        <div class="st-post-fd st-post-fd--text"><p>{{ svistyn.parent.text|nl2br  }}</p></div>
      {% endif %}
      {% if svistyn.parent.photo is not null %}
        <div class="st-post-fd st-post-fd--photo uk-text-center"><img data-src="{{ svistyn.parent.photo|style_image('550w') }}" alt uk-img></div>
      {% endif %}
      {% if svistyn.embedVideo is not null %}
        <div class="st-post-fd st-post-fd--embed">{{ svistyn.parent.embedVideo|video_embed_iframe }}</div>
      {% endif %}
  </div>
  <div class="uk-card-footer">
      {% if svistyn.parent is null and app.user and app.user.id != svistyn.user.id %}
          {{ include('Svistyn/inc/svistyn-post-action-link.html.twig', { 'svistyn' : svistyn }) }}
      {% elseif svistyn.parent is null or svistyn.isParent %}
          {{ include('Svistyn/inc/svistyn-post-action.html.twig', { 'svistyn' : svistyn }) }}
      {% endif %}
  </div>
</div>
