{% extends "Layout/layout-default.html.twig" %}

{% block body_attr %}page-recover{% endblock %}
{% block title %}{{ 'recover_password'|trans }}{% endblock %}

{% block main %}
  <div class="uk-container uk-container-small">
    <div class="uk-section uk-padding uk-background-default kuk-shadow">
      <h2 class="uk-heading-divider">{{ 'recover_password'|trans }}</h2>
      {{ form(recover_form) }}
      <p class="uk-text-small">{{ 'already_member'|trans }} ? <a href="{{ path('login') }}" class="uk-link">{{ 'log_in'|trans }}</a></p>
    </div>
  </div>

{% endblock %}